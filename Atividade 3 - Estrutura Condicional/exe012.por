programa {
  funcao inicio() {

    // Declaração de Variável Numérica
    inteiro numero

    // Solicitando um Número e Realizando a Leitura
    escreva("Digite um numero: ")
    leia(numero)

    // Verificando se o Número é Pár ou Ímpar
    se (numero % 2 == 0){
      escreva("Par")
    } senao {
      escreva("Impar")
    }
    
  }
}
