programa {
  funcao inicio() {

    // Declaração de Variáveis
    real base, altura, area

    // Entradas e Saídas
    escreva("Digite o valor da base: ")
    leia(base)
    escreva("Digite o valor da altura: ")
    leia(altura)

    area = base * altura / 2
    escreva("A area do triangulo mede: ", area)
    
  }
}